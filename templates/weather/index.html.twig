{% extends 'base.html.twig' %}

{% block title %}Weather Information{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Weather Information</h2>
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path('weather_get') }}" class="mb-4">
                        <div class="input-group">
                            <input type="text" name="city" class="form-control" placeholder="Enter city name" value="{{ city }}" required>
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary">Get Weather</button>
                            </div>
                        </div>
                    </form>

                    {% if weatherData is not null %}
                        {% if weatherData.error is defined %}
                            <div class="alert alert-danger">
                                Error: {{ weatherData.error }}
                            </div>
                        {% else %}
                            <div class="card">
                                <div class="card-header bg-info text-white">
                                    <h3>{{ weatherData.city }}, {{ weatherData.country }}</h3>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>Temperature:</strong> {{ weatherData.temperature }}Â°C</p>
                                            <p><strong>Condition:</strong> {{ weatherData.condition }}</p>
                                            <p><strong>Humidity:</strong> {{ weatherData.humidity }}%</p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>Wind Speed:</strong> {{ weatherData.wind_speed }} km/h</p>
                                            <p><strong>Last Updated:</strong> {{ weatherData.last_updated }}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
